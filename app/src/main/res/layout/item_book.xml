<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_book_margin_horizontal"
    android:layout_marginRight="@dimen/item_book_margin_horizontal">
    <ImageView
        android:id="@+id/the_image_view"
        android:layout_gravity="center"
        android:background="#cccccc"
        android:layout_width="@dimen/item_book_image_width"
        android:layout_height="@dimen/item_book_image_height" />
    <TextView
        android:id="@+id/the_text_view"
        android:maxLines="1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>