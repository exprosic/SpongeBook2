<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.exprosic.spongebook2.booklist.BookListFragment"
    android:id="@+id/the_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/the_recycler_view"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="@integer/fragment_book_list_columns"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- spanCount=3 for test -->
    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.SwipeRefreshLayout>
