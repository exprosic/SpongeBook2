<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="@dimen/item_book_add_width"
                android:height="@dimen/item_book_add_width" />
            <corners android:radius="@dimen/item_book_add_stroke_width" />
            <stroke android:width="@dimen/item_book_add_stroke_width"
                android:color="@color/item_book_add"
                android:dashGap="@dimen/item_book_add_dash_gap"
                android:dashWidth="@dimen/item_book_add_dash_width" />
        </shape>
    </item>
    <item android:top="@dimen/item_book_add_plus_offset_length"
        android:bottom="@dimen/item_book_add_plus_offset_length"
        android:left="@dimen/item_book_add_plus_offset_width"
        android:right="@dimen/item_book_add_plus_offset_width">
        <!-- horizontal line -->
        <shape android:shape="rectangle">
            <solid android:color="@color/item_book_add" />
        </shape>
    </item>
    <item android:left="@dimen/item_book_add_plus_offset_length"
        android:right="@dimen/item_book_add_plus_offset_length"
        android:top="@dimen/item_book_add_plus_offset_width"
        android:bottom="@dimen/item_book_add_plus_offset_width">
        <!-- vertical line -->
        <shape android:shape="rectangle">
            <solid android:color="@color/item_book_add" />
        </shape>
    </item>
</layer-list>